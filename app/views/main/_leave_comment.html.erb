<li id="comment-panel">
    <div class="collapsible-header">
      Leave a comment
      <i class="fa fa-caret-down" aria-hidden="true"></i>

    </div>
    <div class="collapsible-body">
      <div class="row comment-content-area">
        <%= form_for :component, url: comments_path, method: :post, class: "col s12" do |f| %>
        <!-- <form class="col s12"> -->
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">mode_edit</i>
                <%= f.text_area(:content, class: "materialize-textarea") %>
           
                <%= f.label(:content, "Write your message below")%>

            </div>
          </div>
          <div class="row name-area">
            <div class="col s12">
              <div class="row">
                <div class="input-field col s3">
                  <i class="material-icons prefix">account_circle</i>

                  <%= f.text_field(:author) %>
                  <%= f.label(:author, "Your Name") %>
                </div>
                <div class="input-field col s9">
                <%= f.submit("Submit", class:"btn waves-effect waves-light center-align", type:"submit", name:"action") %>      
                  
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </li>