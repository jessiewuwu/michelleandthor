<li id="main-img-section">
    <div class="collapsible-header" id="img-panel">
      Link an image/gif
      <i class="fa fa-caret-down" aria-hidden="true"></i>

    </div>
    <div class="collapsible-body">
      <div class="comment-content-area">
        <h5 class="prompt-q">
          <em>Suggested prompt: <%= @prompt.content %></em>
        </h5>
        <%= form_for :component, url: imgs_path, method: :post, class: "col s12", html: {id: "comment-form"} do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">mode_edit</i>
                <%= f.text_area(:content, class: "materialize-textarea", placeholder: "Hey! URL link must end with .jpg, .jpeg, .gif, .png (i.e. http://dogs.com/image/307235-dogs-cute-dog.jpg)") %>
           
                <%= f.label(:content, "Copy & paste a URL of an image or gif of your choice")%>

            </div>
          </div>
          <div class="row name-area">
            <div class="col s12">
              <div class="row">
                <div class="input-field col s12 m4">
                  <i class="material-icons prefix">account_circle</i>

                  <%= f.text_area(:author, class: 'materialize-textarea', required: true) %>
                  <%= f.label(:author, "Your Name or Caption") %>
                </div>
                <div class="input-field col s12 m4">
                  <%= f.check_box(:to_prompt, class: 'filled-in', id: 'to-prompt-img') %>
                  <label for="to-prompt-img">Check if you are answering the prompt</label>
                  <%= f.hidden_field :prompt_id, value: @prompt.id %>
      
                </div>
                <div class="input-field col s12 m4 submit-column">
                <%= f.submit("Submit", class:"btn waves-effect waves-light submit-button", type:"submit", name:"action") %>      
                  
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</li>